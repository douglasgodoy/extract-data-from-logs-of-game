{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
        "@controllers/*": ["src/controllers/*"],
        "@commons/*": ["src/commons/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
